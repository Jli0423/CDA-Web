  <!-- custom css -->
  <link rel="stylesheet" type="text/css" href="/css/custom.css"></link>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"></link>
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Raleway:300,300i,400,400i,500i,600,600i,700,700i,800,800i,900|Source+Sans+Pro:300,300i,400,400i,600i,700,900" rel="stylesheet">
  <!-- JQuery Google host -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <!-- font awesome -->
  <link rel="stylesheet" type="text/css" href="/css/font-awesome.min.css" />
</head>

<body>
  <!-- Header -->
  <section class="header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h4 class="top-bar">M.T.O. Approved B.D.E Course Provider, Located in the heart of Kitchener-Waterloo. Call: (519) 880 0030</h4>
        </div>
      </div>
    </div>
    <div class="container">
    <div class="container">
      <a href = "/cn/">
        <div class="col-md-12 header-hover">
          <div class="row logo">
              <img class = "volkswagen" src = "../images/volkswagen.png" />
          </div>
        </div>
      </a>
    </div>
  </section>
  <section class = "navigation-bar">
    <div class = "container">
      <div class = "row">
        <div class ="col-md-12">
          <ul class="nav justify-content-center">
            <li class="nav-item">
              <a class="nav-link active" href="/cn/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cn/about-us">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cn/services">Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cn/schedule">Schedule</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cn/registration">Registration</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cn/testimonials">Testimonials</a>
            </li>
            <!-- <li class="nav-item">
              <a class="nav-link" href="/cn/questions">QnA</a>
            </li> -->
            <li class="nav-item">
              <a class="nav-link" href="/cn/contact-us">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <section class = "home">
    <div class ="container">
      <div class ="row">
        <div class = "col-md-4 test-container">
          <div class = "btn-road-test">
            <a href = "https://drivetest.ca/book-a-road-test/" target ="_blank" class = "btn btn-road-link"><h3><i class = "fa fa-id-card-o" aria-hidden="true"></i> Road Test Booking</h3></a>
          </div>
          <div class = "group-discounts">
            <img src = "/images/group-discounts-.jpg" class = "discount-img"/>
          </div>
        </div>
        <div class = "col-md-8">
          <h4 class = "text">Got questions? Ask away here!</h4>
          <p class = "text">
            One of our official instructors will respond to you within the next few days
          </p>
          <!-- Live comments -->
          <ul id = "comments">

          </ul>
          <form method = "post" action = "comment">
            <div class = "form-group">
              <label for = "name"><p class = "text">
                Name
              </p></label>
              <input type = "text" class = "form-control text" id = "name" name = "name" required autofocus placeholder="Name"/>
            </div>
            <div class = "form-group">
              <label for = "firstName"><p class = "text">
                Email
              </p></label>
              <input type = "text" class = "form-control text" id = "firstName" name = "email" required placeholder="Email"/>
            </div>
            <div class = "form-group">
              <label for = "questions"><p class = "text">
                Question(s)
              </p></label>
              <textarea class = "form-control text" id = "questions" name = "comment" required placeholder="Questions here!"></textarea>
            </div>
            <div class = "form-group">
              <button type="submit" class="btn btn-primary register-submit" onclick = "this.blur()" action = "submit" id = "submit">Submit <i class = "fa fa-check" aria-hidden="true"></i></button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
  <section class = "footer">
    <div class = "container">
      <div class="row">
        <div class = "col-md-12">
          <img class ="footer-line" src = "/images/footer-line.jpg"/>
        </div>
      </div>
    </div>
    <div class = "container">
      <div class="row">
        <div class ="col-md-8">
          <p class = "copyright">
            Canadian Driving Academy Inc. &copy; 2017
          </p>
        </div>
        <div class = "col-md-4 languages">
          <a href = "/eng">English</a>
        </div>
      </div>
    </div>
  </section>
  <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
   <!-- custom animation js -->
    <script src="/js/wow.min.js"></script>
    <script type="text/javascript" src="/js/animate.js"></script>
    <script type="text/javascript" src="/js/postComments.js"></script>
